# Development aliases for {{ ansible_hostname }}
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Language-specific aliases
{% if language_setup.go.enabled %}
alias gor="go run"
alias gob="go build"
alias got="go test"
alias gom="go mod"
alias go-init='mkdir -p "$1" && cd "$1" && go mod init "github.com/$(whoami)/$1"'
{% endif %}

{% if language_setup.python.enabled %}
# Advanced UV aliases
alias uvi="uv init"
alias uva="uv add"
alias uvs="uv sync"
alias uvr="uv run"
alias venv="uv venv"
alias activate="source .venv/bin/activate"
alias py-init='uv init "$1" && cd "$1"'
{% endif %}

{% if language_setup.node.enabled %}
alias nid="npm install --save-dev"
alias node-init='mkdir -p "$1" && cd "$1" && pnpm init'
{% endif %}

# GitHub CLI aliases
alias ghpr="gh pr"
alias ghis="gh issue"
alias ghv="gh pr view"
alias ghc="gh pr create"

# Advanced development tasks
alias mol="uv run molecule"
alias mtest="task test-dev"
alias mquick="task test-dev-quick"
alias mverify="task test-dev-verify"
alias mclean="task test-dev-clean"

# Project creation helpers
alias new-go="task new-go"
alias new-python="task new-python"
alias new-node="task new-node"
alias new-web="task new-web"