# Development aliases for {{ ansible_hostname }}
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Git aliases
alias g="git"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git pull"
alias gs="git status"
alias gd="git diff"
alias gco="git checkout"
alias gb="git branch"
alias glog="git log --oneline --graph"

# Container aliases
alias {{ container_runtime }}="podman"
{% if container_runtime == "podman" %}
alias docker="podman"
alias docker-compose="podman-compose"
{% endif %}

# Language-specific aliases
{% if language_setup.go.enabled %}
alias gor="go run"
alias gob="go build"
alias got="go test"
alias gom="go mod"
{% endif %}

{% if language_setup.python.enabled %}
alias py="python3"
alias pip="pip3"
alias ve="python3 -m venv"
alias va="source venv/bin/activate"
{% endif %}

{% if language_setup.node.enabled %}
alias pn="pnpm"
alias nr="npm run"
alias ni="npm install"
alias nid="npm install --save-dev"
{% endif %}

# Editor aliases
alias vim="nvim"
alias vi="nvim"
alias v="nvim"

# Common development tasks
alias ll="ls -la"
alias la="ls -la"
alias ..="cd .."
alias ...="cd ../.."
alias grep="rg"
alias find="fd"
alias cat="bat"

# Task runner
alias t="task"
alias tl="task --list"