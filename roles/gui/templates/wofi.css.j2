/* Wofi CSS - Catppuccin Macchiato Theme */
/* Generated by Ansible for {{ ansible_hostname }} */

/* Catppuccin Macchiato Color Variables */
:root {
    --rosewater: #f4dbd6;
    --flamingo: #f0c6c6;
    --pink: #f5bde6;
    --mauve: #c6a0f6;
    --red: #ed8796;
    --maroon: #ee99a0;
    --peach: #f5a97f;
    --yellow: #eed49f;
    --green: #a6da95;
    --teal: #8bd5ca;
    --sky: #91d7e3;
    --sapphire: #7dc4e4;
    --blue: #8aadf4;
    --lavender: #b7bdf8;
    --text: #cad3f5;
    --subtext1: #b8c0e0;
    --subtext0: #a5adcb;
    --overlay2: #939ab7;
    --overlay1: #8087a2;
    --overlay0: #6e738d;
    --surface2: #5b6078;
    --surface1: #494d64;
    --surface0: #363a4f;
    --base: #24273a;
    --mantle: #1e2030;
    --crust: #181926;
}

/* Main window */
window {
    margin: 0px;
    border: 2px solid var(--surface0);
    border-radius: 12px;
    background-color: var(--base);
    font-family: {{ gui_font_family | default('JetBrains Mono') }};
    font-size: {{ gui_font_size | default('12') }}px;
}

/* Input field */
#input {
    all: unset;
    min-height: 36px;
    padding: 4px 12px;
    margin: 4px;
    border: 2px solid var(--surface0);
    border-radius: 8px;
    color: var(--text);
    background-color: var(--surface0);
    font-size: 14px;
}

#input:focus {
    border: 2px solid var(--mauve);
}

/* Inner box */
#inner-box {
    margin: 4px;
    border: none;
    background-color: var(--base);
    border-radius: 8px;
}

/* Outer box */
#outer-box {
    margin: 4px;
    border: none;
    background-color: var(--base);
    border-radius: 8px;
}

/* Scroll area */
#scroll {
    margin: 0px;
    border: none;
    border-radius: 8px;
    background-color: var(--base);
}

/* Text in entries */
#text {
    margin: 4px;
    border: none;
    color: var(--text);
    background-color: transparent;
}

#text:selected {
    color: var(--base);
}

/* Entries */
#entry {
    margin: 4px;
    border: none;
    border-radius: 8px;
    background-color: transparent;
}

#entry:selected {
    background-color: var(--mauve);
    color: var(--base);
}

#entry:hover {
    background-color: var(--surface0);
}

/* Image/icon */
#img {
    margin: 4px;
    border: none;
    background-color: transparent;
}

/* Selected text */
#text:selected {
    color: var(--base);
}

/* Unselected text */
#text:unselected {
    color: var(--text);
}

/* No results */
#no-results {
    margin: 4px;
    border: none;
    color: var(--subtext0);
    background-color: transparent;
}