# Hyprland TTY launch helper
# Generated by Ansible for {{ ansible_hostname }}
# Add this to your shell profile (.bashrc, .zshrc, etc.)

# Function to start Hyprland
start_hyprland() {
    if [ -z "$DISPLAY" ] && [ -z "$WAYLAND_DISPLAY" ]; then
        exec ~/.local/bin/start-hyprland.sh
    else
        echo "Hyprland is already running or X11 session detected"
    fi
}

# Alias for easy launching
alias hypr='start_hyprland'

# Optional: Auto-prompt to launch Hyprland on TTY1 (but don't force it)
if [ -z "$DISPLAY" ] && [ -z "$WAYLAND_DISPLAY" ] && [ "$XDG_VTNR" = 1 ]; then
    echo "Press 'h' to launch Hyprland, or press any other key to stay in TTY:"
    read -t 5 -n 1 key
    if [ "$key" = "h" ] || [ "$key" = "H" ]; then
        start_hyprland
    fi
    echo  # Add newline after prompt
fi