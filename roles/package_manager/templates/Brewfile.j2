# Brewfile for {{ inventory_hostname }}
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Taps
{% for tap in homebrew_taps | default([]) %}
tap "{{ tap }}"
{% endfor %}

# Homebrew packages
{% for package in homebrew_installed_packages | default([]) %}
brew "{{ package }}"
{% endfor %}

# Cask applications
{% for cask in homebrew_cask_apps | default([]) %}
cask "{{ cask }}"
{% endfor %}

# Mac App Store applications
{% for app in mas_applications | default([]) %}
mas "{{ app.name }}", id: {{ app.id }}
{% endfor %}