# Development aliases for {{ ansible_hostname }}
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Language-specific aliases
{% if 'go' in languages %}
alias gor="go run"
alias gob="go build"
alias got="go test"
alias gom="go mod"
alias go-init='mkdir -p "$1" && cd "$1" && go mod init "github.com/$(whoami)/$1"'
{% endif %}

{% if 'python' in languages %}
# UV Python aliases
alias uvi="uv init"
alias uva="uv add"
alias uvs="uv sync"
alias uvr="uv run"
alias venv="uv venv"
alias activate="source .venv/bin/activate"
alias py-init='uv init "$1" && cd "$1"'
{% endif %}

{% if 'zig' in languages %}
alias zb="zig build"
alias zr="zig run"
alias zt="zig test"
{% endif %}

{% if 'ruby' in languages %}
alias be="bundle exec"
alias bi="bundle install"
alias rb-init='mkdir -p "$1" && cd "$1" && bundle init'
{% endif %}

# GitHub CLI aliases
alias ghpr="gh pr"
alias ghis="gh issue"
alias ghv="gh pr view"
alias ghc="gh pr create"

# Container aliases
alias pc="podman"
alias pcc="podman-compose"
alias pcd="podman-compose down"
alias pcu="podman-compose up -d"

# Development shortcuts
alias ll="ls -la"
alias la="ls -A"
alias l="ls -CF"
alias ..="cd .."
alias ...="cd ../.."