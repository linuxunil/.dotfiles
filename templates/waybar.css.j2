/* Waybar CSS - Catppuccin Macchiato Theme */
/* Generated by Ansible for {{ ansible_hostname }} */

/* Catppuccin Macchiato Color Variables */
:root {
    --rosewater: #f4dbd6;
    --flamingo: #f0c6c6;
    --pink: #f5bde6;
    --mauve: #c6a0f6;
    --red: #ed8796;
    --maroon: #ee99a0;
    --peach: #f5a97f;
    --yellow: #eed49f;
    --green: #a6da95;
    --teal: #8bd5ca;
    --sky: #91d7e3;
    --sapphire: #7dc4e4;
    --blue: #8aadf4;
    --lavender: #b7bdf8;
    --text: #cad3f5;
    --subtext1: #b8c0e0;
    --subtext0: #a5adcb;
    --overlay2: #939ab7;
    --overlay1: #8087a2;
    --overlay0: #6e738d;
    --surface2: #5b6078;
    --surface1: #494d64;
    --surface0: #363a4f;
    --base: #24273a;
    --mantle: #1e2030;
    --crust: #181926;
}

/* Global styles */
* {
    font-family: {{ gui_font_family | default('JetBrains Mono') }};
    font-size: {{ gui_font_size | default('12') }}px;
    font-weight: 500;
    min-height: 0;
}

/* Main waybar window */
window#waybar {
    background-color: var(--base);
    border: 2px solid var(--surface0);
    border-radius: 12px;
    color: var(--text);
    transition-property: background-color;
    transition-duration: 0.5s;
}

window#waybar.hidden {
    opacity: 0.2;
}

/* Workspace module */
#workspaces {
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 0px 8px;
    margin: 4px 8px;
}

#workspaces button {
    padding: 4px 8px;
    color: var(--subtext1);
    background-color: transparent;
    border: none;
    border-radius: 6px;
    min-width: 20px;
    transition: all 0.3s ease;
}

#workspaces button:hover {
    background-color: var(--surface1);
    color: var(--text);
}

#workspaces button.active {
    background-color: var(--mauve);
    color: var(--base);
    font-weight: bold;
}

#workspaces button.urgent {
    background-color: var(--red);
    color: var(--base);
}

/* Window title */
#window {
    color: var(--text);
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 12px;
    margin: 4px 8px;
    font-weight: 500;
    max-width: 300px;
}

/* Clock */
#clock {
    color: var(--text);
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 12px;
    margin: 4px 8px;
    font-weight: 600;
}

/* System tray */
#tray {
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 8px;
    margin: 4px 8px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: var(--red);
}

/* CPU */
#cpu {
    color: var(--blue);
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 8px;
    margin: 4px 2px;
}

#cpu.warning {
    color: var(--yellow);
}

#cpu.critical {
    color: var(--red);
}

/* Memory */
#memory {
    color: var(--green);
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 8px;
    margin: 4px 2px;
}

#memory.warning {
    color: var(--yellow);
}

#memory.critical {
    color: var(--red);
}

/* Battery */
#battery {
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 8px;
    margin: 4px 2px;
}

#battery.charging, #battery.plugged {
    color: var(--green);
}

#battery.critical:not(.charging) {
    color: var(--red);
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

@keyframes blink {
    to {
        background-color: var(--red);
        color: var(--base);
    }
}

/* Network */
#network {
    color: var(--teal);
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 8px;
    margin: 4px 2px;
}

#network.disconnected {
    color: var(--red);
}

/* Audio */
#pulseaudio {
    color: var(--yellow);
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 8px;
    margin: 4px 2px;
}

#pulseaudio.muted {
    color: var(--overlay0);
}

/* Tooltip */
tooltip {
    background-color: var(--surface0);
    border: 1px solid var(--surface1);
    border-radius: 8px;
    color: var(--text);
}

tooltip label {
    color: var(--text);
}

/* Idle inhibitor */
#idle_inhibitor {
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 8px;
    margin: 4px 2px;
}

#idle_inhibitor.activated {
    color: var(--lavender);
}

/* Backlight */
#backlight {
    color: var(--peach);
    background-color: var(--surface0);
    border-radius: 8px;
    padding: 4px 8px;
    margin: 4px 2px;
}