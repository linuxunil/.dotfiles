# Ghostty Terminal Configuration
# Enhanced with Catppuccin Latte theme for consistency

# Theme - Catppuccin Macchiato (matching starship, fzf, bat)
theme = catppuccin-macchiato

# Font configuration optimized for development
font-family = JetBrains Mono
font-size = 14
font-thicken = true

# Disable ligatures for clearer code reading
font-feature = -liga

# Window configuration
window-height = 30
window-width = 110
window-padding-x = 12
window-padding-y = 12
title = "Ghostty Terminal"

# Performance and visual settings
background-opacity = 0.95
background-blur-radius = 32

# macOS-specific optimizations
macos-option-as-alt = left
macos-titlebar-style = tabs
macos-window-shadow = true
macos-auto-secure-input = true

# Terminal behavior
scrollback-limit = 10000
confirm-close-surface = false
quit-after-last-window-closed = true

# Shell integration for starship and zellij
shell-integration = detect
term = xterm-ghostty

# Cursor configuration
cursor-style = block
cursor-style-blink = true

# Terminal behavior

# Graphics and media support
image-storage-limit = 320000000

# Essential keybinds only (let zellij handle most shortcuts)
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+plus=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+zero=reset_font_size

# Mouse and link handling
link-url = true
mouse-hide-while-typing = true
mouse-scroll-multiplier = 3

# Notifications
desktop-notifications = true

# Focus behavior
focus-follows-mouse = false

# Window management
window-new-tab-position = end
window-inherit-working-directory = true
window-inherit-font-size = true