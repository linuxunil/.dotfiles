# Bat configuration - Catppuccin Latte theme

# Theme - Catppuccin Latte (light theme)
--theme="Catppuccin-latte"

# Style - syntax highlighting with line numbers
--style="numbers,changes,header"

# Paging - auto-page for long files
--paging=auto

# Use less with optimal flags
--pager="less -RF"

# Enable decorations
--decorations=auto

# Use italic text when supported
--italic-text=always

# Set tab width to 4 spaces
--tabs=4

# Text wrapping
--wrap=auto

# Custom file extension mappings for better syntax highlighting
--map-syntax="*.conf:INI"
--map-syntax="Dockerfile.*:Dockerfile"
--map-syntax="*.env:Bash"
--map-syntax="*.log:Log"
--map-syntax="*.jenkinsfile:Groovy"
--map-syntax="*.tf:Terraform"
--map-syntax="*.hcl:Terraform"
--map-syntax="Dockerfile*:Dockerfile"
--map-syntax="*.yaml:YAML"
--map-syntax="*.yml:YAML"
--map-syntax="*.toml:TOML"
--map-syntax="*.md:Markdown"
--map-syntax="go.mod:Go Module"
--map-syntax="go.sum:Go Module"
--map-syntax="pyproject.toml:TOML"
--map-syntax="uv.lock:TOML"